<% layout("layout/boilerplate") %> 
<h1>All Campgrounds</h1>
<a href="/campgrounds/new">Create campground</a>
<% for( let campground of campgrounds) { %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <% if(campground.images.length){ %> 
                    <img src="<%= campground.images[0].url %>" class="img-fluid">
                <% }else{ %>
                    <img src="https://res.cloudinary.com/dy5jqy5fw/image/upload/v1613495179/YelpCamp/c43ehncyp2h7psl13zsk.jpg"
                        class="img-fluid">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                <h5 class="card-title"><%= campground.title %> </h5>
                <p class="card-text"><%= campground.description %> </p>
                <p class="card-text"> <small><%= campground.location %></small> </p>
                <a href="/campgrounds/<%= campground._id %> " class="btn btn-primary">View details</a>
                </div>
            </div>
        </div>
    </div>
<% } %>
