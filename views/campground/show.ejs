<% layout("layout/boilerplate") %>

<div class="row">
    <div class="col-6">
        <!-- Campground info -->
        <div class="card mb-3">
            <img src="<%= campground.image %>" class=" card-img-top">
            <div class="card-body">
                <h5 class="card-title"><%= campground.title %></h5>
                <p class="card-text"><%= campground.description %></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><%= campground.location %></li>
                <li class="list-group-item">$<%= campground.price %>/night</li>
            </ul>
            <div class="card-body">
                <a href="/campgrounds/<%= campground._id %>/edit " class="card-link btn btn-info">Edit</a>
                <form class="d-inline" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
            <div class="card-footer text-muted">
                2 days ago
            </div>
        </div>
    </div>
    <div class="col-6">
        <!-- Review form -->
        <h2>Leave your review</h2>
        <form action="/campgrounds/<%= campground._id %>/reviews" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label for="body" class="form-label">Review</label>
                <textarea class="form-control" id="body" name="review[body]" id="" cols="30" rows="5"
                    required></textarea>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label for="rating" class="form-label">Rating</label>
                <input type="range" class="form-range" id="rating" min="1" max="5" step="1" name="review[rating]">
            </div>
            <button type="submit" class="btn btn-success">Submit Review</button>
        </form>

        <!-- Review showcase -->
        <% for( let review of campground.reviews) { %>
            <div class="card mt-3">
                <div class="card-body">
                    <h5 class="card-title">Rating:</strong> <%= review.rating %> </h5>
                    <p class="card-text"> <strong>Review:</strong> <%= review.body %></p>
                    <form action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=DELETE"
                        method="POST">
                        <button class="btn btm-sm btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        <% } %>
    </div>
</div>